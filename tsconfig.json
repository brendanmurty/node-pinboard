{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2015",
    "types": ["node"],
    "outDir": "dist/",
    "lib": ["es5", "es6"]
  },
  "files": ["lib/index.ts"],
  "exclude": ["node_modules", "dist"]
}
